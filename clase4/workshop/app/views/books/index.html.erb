<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Year</th>
      <th>Author</th>
      <% if current_user %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag(book.cover.url(:thumb), class:'thumbnail') %></td>
        <td><%= book.title %></td>
        <td><%= book.year %></td>
        <td><%= book.author_id %></td>
        <% if current_user %>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

